apiVersion: v1
kind: ConfigMap
metadata:
  name: "{{ system_info_cm_name }}"
  namespace: "{{ cos_running_namespaces }}"
  labels:
    release.containeros.dev/config-type: system-info
data:
  clusterDeployVersion: "{{ cluster_deploy_job_version }}"
  downloadURL: "{{ download_url }}"
  # image registry config
  imageRegistryIP: "{{ image_registry_ip }}"
  imageRegistryName: "{{ image_registry_domain }}"
  controlClusterVIP: "{{ cluster_vip }}"
  ntpServer: "{{ ntp_server_list }}"
